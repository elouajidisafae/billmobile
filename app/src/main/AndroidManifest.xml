<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.billpromobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BillPro Mobile"
        android:theme="@style/Theme.BillProMobile"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- CETTE ACTIVITY S'OUVRE EN PREMIER -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Les 3 dashboards (pas de launcher) -->
        <activity
            android:name=".ui.superadmin.SuperAdminDashboard"
            android:exported="false" />



        <!-- SUPPRIME ou dÃ©sactive MainActivity -->
        <!-- <activity android:name=".MainActivity" android:exported="false" /> -->

    </application>
</manifest>